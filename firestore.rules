
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.role == 'admin' || request.auth.token.role == 'superadmin';
    }

    function isSuperAdmin() {
      return request.auth.token.role == 'superadmin';
    }

    // Allow anyone to create a registration, but only admins to manage them.
    match /registrations/{registrationId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Only super admins can read logs.
    // Any authenticated user can create a log (via server-side actions).
    match /logs/{logId} {
      allow read: if isSuperAdmin();
      allow create: if request.auth != null;
      allow update, delete: if false; // Logs are immutable
    }

    // Admins can manage users, but only super admins can see all users.
    match /users/{userId} {
      allow read, write: if isSuperAdmin();
    }
    
    // Anyone can read domains, but only admins can write them.
    match /domains/{domainId} {
    	allow read: if true;
      allow write: if isAdmin();
    }
    
    // Anyone can read settings, but only admins can write them.
    // Super admins are defined in the 'admins' document within settings.
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Anyone can read problems, but only admins can write them.
    match /problems/{problemId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Anyone can read the timeline, but only admins can write to it.
    match /timeline/{eventId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
